<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/list/add.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <div class="form-container">
        <h2>Ajouter une liste</h2>
        <form method="POST" action="/list/add">
            <div class="form-group">
                <label for="task-title">Nom de la liste</label>
                <input type="text" id="task-title" name="name" placeholder="Entrez le titre de la liste" required>
            </div>
            <!-- TODO:  enlever le type hidden pour mettre la personne connecté une fois l'auth terminée !-->
            <input type="hidden" name="userId" value="<%= userId %>" placeholder="Entrez le titre de la liste" required>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <button type="submit">Ajouter la liste de tâches</button>
            </div>
        </form>
    </div>
</main>
<%- include('../includes/end.ejs') %>