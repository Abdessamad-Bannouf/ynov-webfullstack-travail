<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/list/all.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <h1>Listes de t√¢ches collaboratifs de management</h1>
    <% if (lists.length > 0) { %>
        <div class="container">
            <% for (let list of lists) { %>
                <div class="card">
                    <h3><%= list.name %></h3>
                    <!--<p>Description of the task. This can be a short summary of what needs to be done.</p>
                    <p class="meta">Assigned to: John Doe</p>!-->
                    <div class="actions">
                        <form method="GET" action="/list/<%= list.id %>">
                            <button>Afficher la liste</button>
                        </form>
                        <form method="POST" action="/list/delete">
                            <input type="hidden" name="id" value="<%= list.id %>">
                            <button>Supprimer</button>
                        </form>
                    </div>
                </div>

            <% } %>
        </div>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
</main>
