<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <div class="form-container">
        <h2>Modifier une liste</h2>
        <form method="POST" action="/list/update/<%= list.id %>">
            <input type="hidden" name="id"  value="<%= list.id %>" required>
            <div class="form-group">
                <label for="task-title">Nom de la liste</label>
                <input type="text" id="task-title" name="name" value="<%= list.name %>" placeholder="Entrez le titre de la liste" required>
            </div>
            <input type="hidden" name="userid" value="<%= userId %>" required>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <button type="submit">Modifier la liste de t√¢ches</button>
            </div>
        </form>
    </div>
</main>
<%- include('../includes/end.ejs') %>